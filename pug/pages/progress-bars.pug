extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-counter

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'http://media1.mennwa.com/2015/12/slide-corporate-hosting.jpg'
	})

	// Skill Bars
	section.section.section-md.bg-default
		.container
			.text-center
				h2 Progress Bars, Skill Bars, Counters
				p These elements are vital to design of every website, and with them you can improve the overall look of your resource and attract more clients.

			.row.justify-content-md-center.row-md-reverse.row-lg-justify.row-50
				.col-md-10.col-lg-6.col-xl-5
					h4 Welcome to Our Website
					p Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page. It will tell you lots of interesting things about our company, its products and services, highly professional staff and happy customers.

				.col-md-10.col-lg-6
					+progress-bar-linear({
						title: "Knowledge",
						valueTo: "75"
					})

					+progress-bar-linear({
						title: "Dedication",
						valueTo: "85"
					})

					+progress-bar-linear({
						title: "Professionalism",
						valueTo: "80"
					})

	// Counters
	section.section.section-md.bg-accent.text-center
		.container
			.row.row-30
				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							span 1.6
							span.small k
						.box-counter-divider
						p.box-counter-title CMS Installations

				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							.counter 27
						.box-counter-divider
						p.box-counter-title Awards Won

				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							.counter 20
							span.small k
						.box-counter-divider
						p.box-counter-title Registered Domains

				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							.counter 99
							span.small.small_top %
						.box-counter-divider
						p.box-counter-title Satisfied Customers

	// Section Circle Progress Bars
	section.section.section-md.bg-default.text-center
		.container
			h3 Circle Progress Bars
			.row.justify-content-center
				.col-sm-5.col-lg-3
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.4' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='150' data-thickness='10')
						span
					p.progress-bar-circle-title Leadership
				.col-sm-5.col-lg-3
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.5' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='150' data-thickness='10')
						span
					p.progress-bar-circle-title Management
				.col-sm-5.col-lg-3
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.6' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='150' data-thickness='10')
						span
					p.progress-bar-circle-title Innovation and creativity
				.col-sm-5.col-lg-3
					// Circle Progress Bar
					.progress-bar-circle(data-value='0.7' data-gradient=colors.primary data-empty-fill='rgb(245,245,245)' data-size='150' data-thickness='10')
						span
					p.progress-bar-circle-title Resilience

	// Countdown
	section.section.section-md.bg-default.text-center
		.container
			.row.justify-content-center
				.col-md-10.col-xl-9
					h3 Countdown
					// TimeCircles
					.DateCountdown(data-type='until' data-date='2018-12-31 00:00:00' data-format='wdhms' data-color=colors.primary data-bg='rgba(245, 245, 245, 1)' data-width='0.02')

	// Page Footer
	include ../sections/_footer-classic
